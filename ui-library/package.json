{
  "name": "@remoteoss/remote-flows-ui",
  "version": "0.1.0",
  "description": "UI component library for Remote Flows",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:css": "sass src/styles/index.scss dist/styles.css --no-source-map",
    "build:js": "tsup",
    "build": "rm -rf dist && npm run build:css && npm run build:js",
    "dev": "npm run build:css && tsup --watch",
    "dev:css": "sass src/styles/index.scss dist/styles.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "sass": "^1.85.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3"
  }
}
