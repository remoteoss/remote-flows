{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src", 
    "vitest-setup.ts",  
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
